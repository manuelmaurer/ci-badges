{
  "require": {
    "php": ">=8.3",
    "slim/slim": "^4.15",
    "slim/psr7": "^1.8",
    "php-di/php-di": "^7.1",
    "php-di/slim-bridge": "^3.4",
    "vlucas/phpdotenv": "^5.6",
    "respect/validation": "^2.4",
    "guzzlehttp/guzzle": "^7.10",
    "middlewares/whoops": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^2.1",
    "povils/phpmnd": "^3.6"
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml config public src",
    "phpstan": "phpstan analyse config public src",
    "phpmnd": "phpmnd src",
    "all": [
      "@phpcs",
      "@phpstan",
      "@phpmnd"
    ]
  }

}
